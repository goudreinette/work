<div class="ui container">
  <div class="ui padded segment">
    <h3 class="ui header">
      Profile
      <div class="detail-actions">
        <% {'upload' => 'Import',
            'download' => 'Export',
            'sign out' => 'Logout'}.each do |icon, label|
        %>
          <%= @icon = icon
              @action = label
              erb :"partials/icon_button"
          %>
        <% end %>
      </div>
    </h3>

    <%=
      @items = {
        'Username' =>  @user.username
      }

      erb :"partials/divided_list"
     %>
  </div>
</div>
