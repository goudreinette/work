<table class="ui celled table job-table">
  <thead>
    <tr>
      <th>Job</th>
      <th>Subtotal</th>
      <th>Tax 21%</th>
      <th>Total</th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td>€<%= format '%.2f', job.cost  %></td>
        <td>€<%= format '%.2f', job.tax %></td>
        <td>€<%= format '%.2f', job.cost_with_tax %></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th></th>
      <th>€<%= format '%.2f', @invoice.subtotal %></th>
      <th>€<%= format '%.2f', @invoice.tax %></th>
      <th>€<%= format '%.2f', @invoice.total %></th>
    </tr>
  </tfoot>
</table>
