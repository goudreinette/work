<div class="ui container">
    <form class="ui padded segment form" method="post">
        <h3 class="ui header">
          <%=  @client.new_record? ? 'Register' : 'Update' %> Client
          <button type="submit" class="ui tiny right floated button">
            Save
          </button>
        </h3>

        <% ['Name', 'Address', 'City', 'Postcode'].each do |field| %>
         <div class="field">
            <label>
              <%= field %>
            </label>
            <input
              name="client[<%= field.downcase %>]"
              value="<%= @client.send(field.downcase.to_sym) %>"
              placeholder="<%= field %>">
          </div>
        <% end %>
    </form>
</div>
